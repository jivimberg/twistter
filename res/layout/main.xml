<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dip"
    android:background="#DDDDDD" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textview_username"
        android:textSize="10pt"
        android:textColor="#444444"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="9dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:text="User Name:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/edittext_username"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/textview_username"
        android:layout_alignTop="@id/textview_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
     <TextView
        android:id="@+id/textview_password"
        android:textSize="10pt"
        android:textColor="#444444"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textview_username"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="Password:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/edittext_password"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/textview_password"
        android:layout_alignTop="@id/textview_password"
        android:layout_below="@id/edittext_username"
        android:layout_marginLeft="17dip"
        android:password="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_login"
        android:layout_below="@id/edittext_password"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="110dip"
        android:text="Login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
     <TextView
        android:id="@+id/textview_error"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:textSize="7pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_login"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:textColor="#AA0000"
        android:text=""/>

     <ImageView android:id="@+id/logo" android:src="@drawable/tornado" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true"></ImageView>

</RelativeLayout>
